<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    app:cardBackgroundColor="@color/alabaster"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="4dp"
        android:orientation="vertical">


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_view"
            android:layout_width="120dp"
            android:layout_marginVertical="16dp"
            android:layout_height="120dp"
            android:layout_gravity="center"

            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/round_warning" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingHorizontal="12dp"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Main Msg"
                android:paddingVertical="4dp"
                android:textColor="@color/ebony_clay"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="6dp"
                android:text="Main Msg"
                android:textColor="@color/ebony_clay"
                android:textSize="13sp"
                android:textStyle="bold" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:paddingTop="14dp"
               android:gravity="center"
               >
               <androidx.appcompat.widget.AppCompatButton
                   android:id="@+id/save_emp"
                   android:layout_width="140dp"
                   android:layout_height="wrap_content"
                   android:background="@drawable/btn_bg_white_fill"
                   android:backgroundTint="@color/green"
                   android:letterSpacing=".04"
                   android:text="@string/save"
                   android:layout_marginHorizontal="8dp"
                   android:textAllCaps="false"
                   android:textColor="@color/white"
                   android:textSize="16sp" />
               <androidx.appcompat.widget.AppCompatButton
                   android:id="@+id/save_cancel"
                   android:layout_width="140dp"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="8dp"
                   android:background="@drawable/btn_bg_white_fill"
                   android:backgroundTint="@color/green"
                   android:letterSpacing=".04"
                   android:text="@string/save"
                   android:textAllCaps="false"
                   android:textColor="@color/white"
                   android:textSize="16sp" />

           </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>